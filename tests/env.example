# Example environment variables for testing
# Copy this file to .env and fill in your values

# Application URL for testing
TEST_BASE_URL=http://localhost:3000

# Test user credentials
TEST_USER_EMAIL=test@example.com
TEST_ADMIN_EMAIL=admin@example.com
TEST_ADMIN_PASSWORD=your_admin_password

# Database connection for direct testing (optional)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# Test behavior settings
HEADLESS=true  # Set to false to see browser during frontend tests
